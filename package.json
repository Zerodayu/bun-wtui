{
  "name": "bun-wtui",
  "version": "1.1.0",
  "description": "Neovim-style TUI dashboard for Bun workspaces",
  "type": "module",
  "module": "index.ts",
  "bin": {
    "bun-wtui": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "bun run build && bun link",
    "build": "bun build src/index.ts --outfile dist/index.js --target bun --external blessed && chmod +x dist/index.js",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "bun",
    "tui",
    "monorepo",
    "workspace",
    "terminal",
    "dashboard",
    "blessed",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zerodayu/bun-wtui.git"
  },
  "bugs": {
    "url": "https://github.com/Zerodayu/bun-wtui.git/issues"
  },
  "homepage": "https://github.com/Zerodayu/bun-wtui.git#readme",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/blessed": "^0.1.27",
    "blessed": "^0.1.81",
    "syncpack": "^14.0.0"
  }
}
